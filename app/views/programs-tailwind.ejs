<%- include ('partials/header-tailwind') %>

<header class="absolute inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
                <h1 class="text-2xl font-bold">Franck MARCHE</h1>
            </a>
        </div>
        <div class="flex lg:hidden" id="open-menu-button">
            <button type="button"
                class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                <span class="sr-only">Open main menu</span>
                <svg class="h-6 w-6 text-black" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                    aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <div class="hidden lg:flex lg:gap-x-12">
            <a href="/" class="text-sm font-semibold leading-6 text-gray-900">Accueil</a>
            <a href="/coach" class="text-sm font-semibold leading-6 text-gray-900">Qui suis-je ?</a>
            <a href="/programs" class="text-sm font-semibold leading-6 text-gray-900">Programmes</a>
            <a href="/contacts" class="text-sm font-semibold leading-6 text-gray-900">Contact</a>
        </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="hidden" role="dialog" aria-modal="true" id="menu-button">
        <div class="fixed inset-0 z-50"></div>
        <div
            class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
            <div class="flex items-center justify-between">
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <img class="h-8 w-auto"
                        src="/img/z.png" alt="">
                </a>
                <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" id="close-button">
                    <span class="sr-only">Close menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="mt-6 flow-root">
                <div class="-my-6 divide-y divide-gray-500/10">
                    <div class="space-y-2 py-6">
                        <a href="/"
                            class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Accueil</a>
                        <a href="/coach"
                            class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Qui suis-je ?</a>
                        <a href="/programs"
                            class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Programmes</a>
                        <a href="/contacts"
                            class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    
    <div class="py-12 mt-16">
        <div class="container m-auto px-6 text-gray-600 md:px-12 xl:px-6">
            <div class="mb-12 space-y-2 text-center">
                <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">Nos Programmes</h2>
                <p class="text-gray-600 dark:text-gray-300 lg:mx-auto lg:w-6/12">
                    DÃ©couvrez et optez pour le programme qui vous correspond !
                </p>
            </div>
    
            <div class="lg:w-3/4 xl:w-2/4 lg:mx-auto">
                <% for (const program of programs) { %>
                    <div
                        class="group relative -mx-4 sm:-mx-8 p-6 sm:p-8 rounded-3xl bg-white dark:bg-transparent border border-transparent hover:border-gray-100 dark:shadow-none dark:hover:border-gray-700 dark:hover:bg-gray-800 shadow-2xl shadow-transparent hover:shadow-gray-600/10 sm:gap-8 sm:flex transition duration-300 hover:z-10">
                        <div class="sm:w-2/6 rounded-3xl overflow-hidden transition-all duration-500 group-hover:rounded-xl">
                            <img src="<%= program.photo %>"
                                alt="art cover" loading="lazy" width="1000" height="667"
                                class="h-56 sm:h-full w-full object-cover object-top transition duration-500 group-hover:scale-105" />
                        </div>
        
                        <div class="sm:p-2 sm:pl-0 sm:w-4/6">
                            <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
                                <%= program.name %>
                            </h3>
                            <p class="my-6 text-gray-600 dark:text-gray-300">
                                <%= program.description.split(" ").slice(0, 15).join(" ") + "..."  %>
                            </p>
        
                            <div class="flex gap-4">
                                <a href="/programs/<%= program.id %>"
                                    class="px-3 py-1 rounded-full border border-gray-100 text-sm font-medium text-primary transition duration-300 hover:border-transparent hover:bg-primary hover:text-white dark:border-gray-700 dark:text-gray-300">
                                    En savoir plus <span aria-hidden="true">&rarr;</span>
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>


            </div>
        </div>
    </div>
</section>

<%- include ('partials/footer-tailwind') %>